<div id="banner">
  <h1>Your Movie List</h1>
  <h3>Categorize with your own movie genres</h3>
</div>
<div class='cards'>
  <% @lists.each do |list| %>
    <div class='genre' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key%>')">
      <p><%= list.name %></p>
      <p class="show"><%= link_to 'Show', list %></p>

    </div>
  <% end %>
</div>
<div class='btn btn-primary list-btn'>
  <%= link_to 'New List', new_list_path %>
</div>
